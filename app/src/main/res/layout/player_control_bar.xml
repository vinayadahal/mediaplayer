<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:layout_alignParentBottom="true"
    android:background="#80000000"
    android:orientation="horizontal"
    android:padding="5dp">


    <android.support.percent.PercentRelativeLayout
        android:id="@+id/relativePercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="kill"
            android:textAlignment="center"
            android:textColor="#fff"
            app:layout_widthPercent="15%" />

        <SeekBar
            android:id="@+id/vid_seekbar"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:contextClickable="true"
            android:progressDrawable="@drawable/progress_bar_styler"
            android:thumb="@color/colorText"
            android:thumbTint="@color/colorPlayBackNormal"
            app:layout_widthPercent="70%"
            />

        <TextView
            android:id="@+id/total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:textColor="#fff"
            app:layout_widthPercent="15%" />


    </android.support.percent.PercentRelativeLayout>


    <include layout="@layout/player_control_btns" />

</RelativeLayout>
